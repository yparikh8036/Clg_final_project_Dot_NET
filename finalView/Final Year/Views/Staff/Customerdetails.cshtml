                                    <a class="glyphicon glyphicon-trash" data-toggle="tooltip" title="Delete" href="/Staff/CustContactDelete?CustContactID=@custcontacts.Rows[i]["CustContactID"]&CustomerID=@Model.CustomerID">
                                    </a>
                                </td>
                            </tr>
                            }
                            <tr>
                                <td>
                                    <div class="form-group">
                                        <div class="">
                                            <input type="text" class="form-control" placeholder="Name" name="Name">
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group">
                                        <div class="">
                                            <input type="text" class="form-control" placeholder="Email" name="Email">
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group">
                                        <div class="">
