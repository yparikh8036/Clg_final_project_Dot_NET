 <div class="col-md-10">
        <div class="content-box-large">
            <div class="panel-heading">
                <div class="panel-title">Customer Contacts</div>
            </div>
            <div class="panel-body">
                <form method="post" action="CustomerContactNewSubmit">
                    <table class="table" border="5">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Mobile</th>
                                <th>Purpose</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < custcontacts.Rows.Count; i++)
                            {
                            <tr>
                                <td>@custcontacts.Rows[i]["Name"]</td>
                                <td>@custcontacts.Rows[i]["Email"]</td>
                                <td>@custcontacts.Rows[i]["Mobile"]</td>
                                <td>@custcontacts.Rows[i]["Purpose"]</td>
